<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="211.0" prefWidth="290.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="arifmetic.server.controllers.Controller">
    <children>
        <Label text="HTTP адрес сервера:">
            <VBox.margin>
                <Insets bottom="-10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </Label>
        <TextField fx:id="addressField" text="http://0.0.0.0">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </TextField>
        <Label text="Порт:">
            <VBox.margin>
                <Insets bottom="-10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </Label>
        <TextField fx:id="portField" prefWidth="144.0" text="8000">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </TextField>
        <Button fx:id="init" alignment="CENTER_RIGHT" contentDisplay="CENTER" mnemonicParsing="false" onAction="#init" text="Инициализировать" textAlignment="CENTER">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </Button>
      <ToggleButton fx:id="serverButton" disable="true" mnemonicParsing="false" onAction="#listenClients" text="Сервер не работает">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </ToggleButton>
    </children>
</VBox>
